<body class="container">
  <header>
    <%- include('../partials/header'); %>
  </header>
  <div id="register-page" class="row">
      <div class="col s12 z-depth-6 card-panel">
        <form class="register-form" id="registerform">
          <div class="row">
          </div>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">mail_outline</i>
              <input class="validate" id="email" type="email">
              <label for="email" data-error="wrong" data-success="right">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">lock_outline</i>
              <input id="password" type="password">
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">lock_outline</i>
              <input id="confirmPassword" type="password">
              <label for="password">Confirm password</label>
            </div>
          </div>
          <div class="row">
            <div class="g-recaptcha" data-sitekey="6LdEXBgaAAAAANyNLaC3jWXK46wxJYIctZMXjKNt"></div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input href="#" class="btn waves-effect waves-light col s12" type="button" name="register" value="Register"/>
            </div>
          </div>
          <div class="row">
            <div class="col s12 center">
              <%- include('../partials/googleButton'); %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6 m6 l6">
                <p class="margin medium-small"><a href="/signin">Sign in!</a></p>
            </div>       
          </div>
  
        </form>
      </div>
    </div> 
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

    
</body>

